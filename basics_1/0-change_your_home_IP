#!/usr/bin/env bash
# This script configures localhost and facebook.com resolutions in /etc/hosts

# Backup the current /etc/hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Overwrite /etc/hosts with the required configuration
# Keep default IPv6 entries to avoid breaking system services
cat <<EOF | sudo tee /etc/hosts > /dev/null
127.0.0.2   localhost
8.8.8.8     facebook.com

# The following lines are desirable for IPv6 capable hosts
::1     ip6-localhost ip6-loopback
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters
EOF
